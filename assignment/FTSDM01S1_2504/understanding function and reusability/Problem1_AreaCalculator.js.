function triangleArea(base, height){
  if (base<0 || height<0){
    return `Invalid number, base and height must be a positive numbers`
  }else {
  let area=base*height/2;
  area=area.toFixed(2);
  return `The area of triangle is ${area}`
  }
}

/**
line.no2: the if...else condition is to vaidate for a positive input
line.no5: the area of triangle is calculated and assigned to "area" variable
line.no6: "toFixed" function used to get area upto 2 decimal place
line.no7: outputs the area;
**/
